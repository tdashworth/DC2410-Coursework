{
  "name": "dc2410-coursework",
  "version": "1.0.0",
  "description": "An adoption management web system as a part of the course DC2410 at Aston University",
  "scripts": {
    "install": "npm run install:backend && npm run install:frontend",
    "install:backend": "cd backend && npm install",
    "install:frontend": "cd frontend && npm install",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "concurrently \"npm run start:backend\" \"npm run build:frontend\"",
    "start:db": "mongod --dbpath data --port 27017",
    "start:backend": "cd backend && npm run start:dev",
    "start:frontend": "cd frontend && npm run start",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && npm run test",
    "test:frontend": "cd frontend && npm run test",
    "serve": "cd backend && node dist/index.js"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tdashworth/DC2410-Coursework.git"
  },
  "author": "Tom Ashworth (TDAshworth)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tdashworth/DC2410-Coursework/issues"
  },
  "homepage": "https://github.com/tdashworth/DC2410-Coursework#readme"
}
